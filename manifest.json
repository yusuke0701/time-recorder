{
    "name": "Time Recorder",
    "version": "1.0",
    "description": "時間を記録するツールです",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "images/get_started32.png"
        }
    },
    "options_page": "option.html",
    "manifest_version": 2
}